<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-12">
    {{#if blogs.length}}
    <div class="col-md-10 post-list">
      <h3>Your Current Posts:</h3>
      {{#each blogs as |blog|}}
      <div class="col-md-12"></div>
      {{>blog-card}}  
    </div>
   <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
    {{/each}}
    {{/if}}
    
  </div>


<div><button  onclick="newPostForm()">New Post</button></div>
  
<div class="row mt-4" id="newPost" style="display: none">
  <div class="col-md-12">
    <h3>Create a New Blog Post:</h3>
  <form class="form new-post-form">
    <div class="form-group">
      <label for="blog-title">Title:</label>
      <input class="form-input" type="text" id="blog-title" name="blog-title" />
    </div>

    <div class="form-group">
      <label for="blog-content">Post:</label>
      <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

  </div> 




<script src="/js/dashboard.js"></script>